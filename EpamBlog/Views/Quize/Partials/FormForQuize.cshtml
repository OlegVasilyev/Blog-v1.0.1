@model EpamBlog.ViewModels.Quiz

@using EpamBlog.Helpers;

<div class="row">
    @using (Html.BeginForm("Index", "Quize", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="col s12">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="input-field col s12 m12 l6">
                    @Html.LabelFor(model => model.Name)
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @required = "required" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
                <div class="input-field col s12 m12 l6">
                    @Html.LabelFor(model => model.Surname)
                    @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @required = "required" } })
                    @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12 m6 l6">
                    @Html.LabelFor(model => model.Email)
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @type = "email", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
                <div class="input-field col s12 m6 l6">
                  <input type="date" name="DateBirt" class="input-field col s12 m6 16" />
                    @Html.ValidationMessageFor(model => model.DateBirt, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12 m6 16">   
                    <input id="phone" type="tel" name="NumberTelephone" />
                    <label for="phone">Phone</label>
                    @Html.ValidationMessageFor(model => model.NumberTelephone, "", new { @class = "text-danger" })
                </div>
                <div class="input-field col s12 m6 l6">
                    @Html.CreateDropDown("What is your position ?", new string[] { "Junior", "Middle", "Senior", "Team Lead", "Other" }, new { @name = "Position" })
                    <label>Position</label>
                    @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col s12 m6 l6 centralized">
                    <p>
                        @Html.RadioButtonFor(model => model.Sex, "male", new { @class = "with-gap", @checked = "checked", @id = "radio_1" })
                        <label for="radio_1">Male</label>
                    </p>
                    <p>
                        @Html.RadioButtonFor(model => model.Sex, "female", new { @class = "with-gap", @id = "radio_2" })
                        <label for="radio_2">Female</label>
                    </p>
                    @Html.ValidationMessageFor(model => model.Sex, "", new { @class = "text-danger" })
                </div>
                <div class="input-field col s12 m6 l6">
                    @Html.CreateDropDown("Choose what your`re interested in", new string[] { "Development", "Design", "Sport", "People" }, new { @name = "Interest" })
                    <label>Interest</label>
                    @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <p>
                        <input type="checkbox" name="Smoke" id="checkbox_s" value="true" />
                        <label for="checkbox_s">Do you smoke ?</label>
                        <input type="checkbox" name="Smoke" hidden value="false" />
                        @Html.ValidationMessageFor(model => model.Smoke, "", new { @class = "text-danger" })
                    </p> 
                </div>
                <div class="input-field col s12">
                    @Html.LabelFor(model => model.About, "Something about yourself:")
                    @Html.TextAreaFor(model => model.About, new { @class = "materialize-textarea" })
                    @Html.ValidationMessageFor(model => model.About, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <p>
                        <input type="checkbox" name="SendEmail" id="checkbox_send" value="true" />
                        <label for="checkbox_send">Do you want send result ?</label>
                        <input type="checkbox" name="SendEmail" hidden value="false" />
                        @Html.ValidationMessageFor(model => model.SendEmail, "", new { @class = "text-danger" })
                    </p>
                </div>
                <div class="col s2 push-s5">
                    <input type="submit" value="Submit" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>

