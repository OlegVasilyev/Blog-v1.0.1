@{
    ViewBag.Title = "Quize";
}

<div class="row no-margin-bot">
    <div class="col s7 push-s1">
        <div id="main-body" class="card">
            <div class="row"></div>
            <p class="flow-text welcome-text centralized">Welcome to EpamBlog!</p>
            <p class="flow-text sub-welcome-text centralized">Just tell us a little about yourself</p>
            <hr class="colored-hr" />
            @Html.Partial("Partials/FormForQuize")
        </div>
    </div>
    <div class="col s3 push-s1">
        <div class="row">
            <div id="right-sidebar" class="card centralized">
                <div class="row"></div>
                <p class="card-title flow-text">Menu</p>
                <div class="collection with-header">
                    @Html.RouteLink("Home", new { controller = "Home", action = "Index" }, new { @class = "collection-item" })
                    @Html.RouteLink("Reviewes", new { controller = "Reviews", action = "Index" }, new { @class = "collection-item" })
                    @Html.RouteLink("Quize", new { controller = "Quize", action = "Index" }, new { @class = "collection-item active" })
                </div>
            </div>
        </div>
    </div>
</div>
