@model IEnumerable<EpamBlog.ViewModels.Comment>

@if (Model.Count() == 0)
{
    <p class="flow-text centralized welcome-text">There are no comments yet..</p>
}
else
{
    foreach (var item in Model.ToList())
    {
        <hr />
        <div class="row">

            <div class="col s12" style="font-size:large">
                <b>@Html.DisplayFor(modelItem => item.User) </b>
            </div>

        </div>
        <div class="row">
            <div class="col s12">
                @Html.DisplayFor(modelItem => item.Text)
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <b>@Html.DisplayFor(modelItem => item.Date)</b>
            </div>
        </div>
    }

}

